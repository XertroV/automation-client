{
  "environment": "testing",
  "policy": "durable",
  "http": {
    "auth": {
      "basic": {
        "enabled": true
      },
      "bearer": {
        "enabled": true
      }
    }
  },
  "ws": {
    "termination": {
      "graceful": true,
      "gracePeriod": 60000
    },
    "compress": true
  },
  "applicationEvents": {
    "enabled": true
  },
  "cluster": {
    "enabled": true
  },
  "logging": {
    "level": "info",
    "file": {
      "enabled": false,
      "level": "debug"
    }
  },
  "statsd": {
    "enabled": true
  }
}